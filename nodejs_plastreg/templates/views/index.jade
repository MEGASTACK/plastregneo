extends ../layouts/default

block content
	.container: .jumbotron
		if user
			h2 Welcome to Plast Registration System
			if user.canAccessKeystone
				p
					a(href='/keystone/signin').btn.btn-lg.btn-primary Open the Admin UI
			else if user.canAccessPlastreg
				p
					Plastreg stuff goes here!
		else
			p You are not logged in.
			p
				a(href='/plastreg/register', style='margin-right: 10px').btn.btn-lg.btn-primary Register
				a(href='/plastreg/signin', style='margin-right: 10px').btn.btn-lg.btn-primary User login
				a(href='/keystone/signin', style='margin-right: 10px').btn.btn-lg.btn-primary Admin login